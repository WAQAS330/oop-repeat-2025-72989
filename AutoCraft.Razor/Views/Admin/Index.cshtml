@model List<AutoCraft.Razor.Models.CustomerDTO>
@{
    ViewData["Title"] = "Customers";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2>Customer Management</h2>

    <!-- Button to open modal -->
    <button class="btn btn-primary mb-3" data-bs-toggle="modal" data-bs-target="#addCustomerModal">
        Add New Customer
    </button>

    <!-- Success message -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }

    <!-- Customer Table -->
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Full Name</th>
                <th>Email Address</th>
                <th>Account Password</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@count</td>
                    <td>@customer.FullName</td>
                    <td>@customer.EmailAddress</td>
                    <td>@customer.AccountPassword</td>
                    <td>
                        <!-- View Records button -->
                        <a href="@Url.Action("CustomerDetails", "Admin", new { id = customer.CustomerIdentifier })"
                           class="btn btn-info btn-sm">
                            View Records
                        </a>
                        <!-- Delete button -->
                        <form asp-controller="Admin" asp-action="DeleteCustomer" asp-route-id="@customer.CustomerIdentifier" method="post"
                              onsubmit="return confirm('Are you sure you want to delete this customer?')"
                              style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

<!-- Add Customer Modal -->
<div class="modal fade" id="addCustomerModal" tabindex="-1" data-bs-backdrop="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-controller="Admin" asp-action="AddCustomer" method="post">
                <div class="modal-header">
                    <h5 class="modal-title">Add Customer</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Full Name</label>
                        <input name="FullName" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Email Address</label>
                        <input name="EmailAddress" type="email" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Account Password</label>
                        <input name="AccountPassword" type="password" class="form-control" required />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
